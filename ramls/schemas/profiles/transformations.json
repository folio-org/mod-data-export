{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Mapping transformations detail",
  "type": "object",
  "javaType": "org.folio.rest.jaxrs.model.Transformations",
  "additionalProperties": false,
  "properties": {
    "fieldId": {
      "description": "Field identifier",
      "type": "string"
    },
    "path": {
      "description": "JSON path to set mapped value",
      "type": "string"
    },
    "enabled": {
      "description": "Indicates whether field should be mapped",
      "type": "boolean",
      "default": false
    },
    "transformation": {
      "description": "Mapping expression",
      "type": "string"
    },
    "recordType": {
      "description": "Mapping Profile type",
      "type": "string",
      "$ref": "recordTypes.json"
    },
    "hasSameFieldInHoldings": {
      "description": "The sign that means the current transformation is for boh item and holding",
      "type": "boolean",
      "default": false
    },
    "metadataParameters": {
      "description": "Additional parameters used for mapping",
      "type": "object",
      "javaType": "java.util.Map<String, String>"
    }
  },
  "required": [
    "fieldId",
    "recordType"
  ]
}
