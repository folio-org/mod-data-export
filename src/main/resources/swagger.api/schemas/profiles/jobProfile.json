{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Job profile",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "id": {
      "description": "Unique identifier",
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "description": "Job Profile name",
      "type": "string"
    },
    "default" : {
      "description": "Is default job profile",
      "type": "boolean",
      "default": false,
      "readonly": true
    },
    "destination": {
      "description": "Final destination place where to send file",
      "type": "string"
    },
    "description": {
      "description": "Job Profile description",
      "type": "string"
    },
    "userInfo": {
      "description": "First name, last name and username of the user, who updated the Job Profile",
      "type": "object",
      "$ref": "userInfo.json"
    },
    "mappingProfileId": {
      "description": "Associated mapping profile id",
      "type": "string",
      "format": "uuid"
    },
    "protocol": {
      "description": "TCP/IP settings",
      "type": "object",
      "$ref": "protocol.json"
    },
    "locked": {
      "description": "True if locked, false if unlocked",
      "type": "boolean",
      "default": false
    },
    "lockedBy": {
      "description": "UUID of the user who locked the job profile",
      "type": "string",
      "format": "uuid"
    },
    "lockedAt": {
      "description": "Date and time when job profile was locked",
      "type": "string",
      "format": "date-time"
    },
    "metadata": {
      "description": "Metadata provided by the server",
      "type": "object",
      "$ref": "../metadata.json",
      "readonly": true
    }
  },
  "required": [
    "name",
    "mappingProfileId"
  ]
}
